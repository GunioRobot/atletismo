<h1>Calendário de <%=h @atleta.usuario.name %></h1>

<%= link_to 'Treino deste mês transposto', :action => 'show_month_transpost', :atleta_id => @atleta, :data => Date.current %> <br />
<table border=1 height="100%" width="100%">
    <thead>
        <th/>
        <th>
            Segunda
        </th>
        <th>
            Terça
        </th>
        <th>
            Quarta
        </th>
        <th>
            Quinta
        </th>
        <th>
            Sexta
        </th>
        <th>
            Sábado
        </th>
        <th>
            Domingo
        </th>
    </thead>
    <tbody>
      <%@matrizDeTreinos.each_with_index do |semana,index|%>
      <tr>
        <td>
            <%= semana.first.date.beginning_of_week %> até
            <%= semana.first.date.end_of_week %>
        </td>
        <%semana.each do |dia|%>
          <td>
            <%dia.itens_treino.each do |item_treino|%>
              <div style="background-color:#<%=item_treino.cor_treino.cor%>">
              <%=item_treino.metodo%> 
			  <%=item_treino.exercicio%>
              <%=item_treino.repeticao%> 
 	          <%=item_treino.series%> 
              <%=item_treino.volume%> 
              <%=item_treino.pausa%>
			  <%=item_treino.intervalo%> 
              <br />
            <%end%>  
          </td>
        <%end%>
      </tr>
      <%end%>
      
    </tbody>
    
</table>
<br/>

<%= link_to "Voltar", :controller => "treino", :action => "treino_atleta", :atleta_id => @atleta %>
