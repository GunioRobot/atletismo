<h1>Cálculo de ritmo</h1>

<% form_tag :action => :calcula_ritmo_parcial do %>
	<table>
		<tr>
			<th>Ritmo Minutos</th>
			<th>Ritmo Segundos</th>
			<th>Ritmo Décimos</th>
			<th>Distância do Tiro / Prova (m)</th>
			<th>Parcial</th>
		</tr>
		<tr>
			<td><%=@minutos%></td>
			<td><%=@segundos%></td>
			<td><%=@decimos%></td>
			<td><%=@distancia%></td>
			<td><%=@parcial%></td>
		</tr>
	</table>
	<br/>


	<h2>Ritmo Parcial (min/km)</h2>
	<table>
		<tr>
			<th>Minutos</th>
			<th>Segundos</th>
			<th>Decimos</th>
		</tr>
		<tr>
			<td><%= @ritmo_minutos %></td>
			<td><%= @ritmo_segundos %></td>
			<td><%= @ritmo_decimos %></td>
		</tr>
	</table>
	<br/>
	<%= link_to "Novo cálculo", :controller => "treino", :action => "calcula_ritmo_inicial" %>
	
	
<% end %>